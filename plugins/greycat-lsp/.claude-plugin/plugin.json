{
  "name": "greycat-lsp",
  "version": "1.7.3",
  "description": "GreyCat Language Server Protocol plugin - Provides LSP support for .gcl files including code completion, diagnostics, go-to-definition, and hover information.",
  "author": {
    "name": "Datathings",
    "email": "contact@datathings.com"
  },
  "license": "MIT",
  "repository": "https://github.com/datathings/marketplace",
  "keywords": [
    "greycat",
    "lsp",
    "language-server",
    "gcl",
    "code-completion",
    "diagnostics",
    "ide-support"
  ],
  "lspServers": {
    "greycat": {
      "command": "greycat-lang",
      "args": ["server", "--stdio"],
      "extensionToLanguage": {
        ".gcl": "greycat"
      },
      "transport": "stdio",
      "startupTimeout": 10000,
      "shutdownTimeout": 5000,
      "restartOnCrash": true,
      "maxRestarts": 3
    }
  }
}